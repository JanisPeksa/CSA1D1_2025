public class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        

        System.out.print("Enter size: ");
        int n = sc.nextInt();

        int[] arr = new int[n];

        System.out.println("Enter numbers:");
        for (int i = 0; i < n; i++) {
            arr[i] = sc.nextInt();
        }

        int longest = 1;  
        int count = 1;     

        for (int i = 1; i < n; i++) {
            if (arr[i] > arr[i - 1]) {
                count++;     
            } else {
                count = 1;        
            }

            if (count > longest) {
                longest = count;
            }
        }

        System.out.println("Longest increasing length = " + longest);

        

        System.out.print("Enter k: ");
        int k = sc.nextInt();
        k = k % n;  
        
        for (int step = 0; step < k; step++) {
            int last = arr[n - 1];

            for (int i = n - 1; i > 0; i--) {
                arr[i] = arr[i - 1];   
            }

            arr[0] = last;
        }

        System.out.print("Array after rotating: ");
        for (int i = 0; i < n; i++) {
            System.out.print(arr[i] + " ");
        }
    }
}
