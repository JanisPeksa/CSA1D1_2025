import java.util.Scanner;

public class Task3 {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        System.out.print("Enter size of first array: ");
        int n1 = sc.nextInt();

        System.out.print("Enter size of second array: ");
        int n2 = sc.nextInt();

        int[] A = new int[n1];
        int[] B = new int[n2];

        System.out.println("Enter " + n1 + " sorted integers for array A:");
        for (int i = 0; i < n1; i++) {
            A[i] = sc.nextInt();
        }

        System.out.println("Enter " + n2 + " sorted integers for array B:");
        for (int i = 0; i < n2; i++) {
            B[i] = sc.nextInt();
        }

        // Merge arrays
        int[] C = new int[n1 + n2];
        int i = 0, j = 0, k = 0;

        // Merge-sort
        while (i < n1 && j < n2) {
            if (A[i] <= B[j]) {
                C[k++] = A[i++];
            } else {
                C[k++] = B[j++];
            }
        }

        while (i < n1) {
            C[k++] = A[i++];
        }
        while (j < n2) {
            C[k++] = B[j++];
        }

        System.out.print("Merged array: ");
        for (int x : C) {
            System.out.print(x + " ");
        }

    }
}
