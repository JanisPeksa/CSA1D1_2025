import java.util.Scanner;

public class ShiftArrayRight {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        // Step 1: Read n and array elements
        System.out.print("Enter array size: ");
        int n = scanner.nextInt();

        int[] arr = new int[n];
        for (int i = 0; i < n; i++) {
            System.out.print("Enter element " + (i + 1) + ": ");
            arr[i] = scanner.nextInt();
        }

        // Step 2: Read k
        System.out.print("Enter steps to shift right (k): ");
        int k = scanner.nextInt();

        // Step 3: Normalize k
        k = k % n;

        // Step 4: Shift array right by k steps
        for (int i = 0; i < k; i++) {
            int last = arr[n - 1];
            for (int j = n - 1; j > 0; j--) {
                arr[j] = arr[j - 1];
            }
            arr[0] = last;
        }

        // Step 5: Output the shifted array
        System.out.print("Shifted array: ");
        for (int i = 0; i < n; i++) {
            System.out.print(arr[i] + " ");
        }
    }
}
