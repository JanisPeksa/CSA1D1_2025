import java.util.Scanner;

class Main {
    public static void main(String[] args) {
        Scanner s = new Scanner(System.in);

        int n = s.nextInt();
        int[] a = new int[n];

        for (int i = 0; i < n; i++) {
            a[i] = s.nextInt();
        }

        int max = 1, curr = 1;

        for (int i = 1; i < n; i++) {
            if (a[i] > a[i - 1]) {
                curr++;
            } else {
                curr = 1;
            }
            if (curr > max) max = curr;
        }

        System.out.println(max);
    }
}
